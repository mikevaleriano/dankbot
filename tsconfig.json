{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
  ],
  "ts-node": {
    "files": true,
  },
}
